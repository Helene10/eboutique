                    <div class="category-item">
                        <%= image_tag('category1.jpg') %>
                        <div class="overlay">
                            <div class="caption">
                                <h4>Art</h4>
                            </div>
                        </div>
                    </div><!-- / category-item -->
                </a>
            </div><!-- / category -->

        </div><!-- / row -->
    </div><!-- / container -->
</section>
<!-- / categories -->

<!-- featured-products -->
<section id="featured-products">
    <div class="page-header text-center wsub">
        <h2>Featured Products 8</h2>
    </div><!--/ page-header -->
    <div id="products-carousel" class="owl-carousel">
        <% @item.last(8).shuffle.each do |item|  %> 
        <!-- item -->
        <div class="item product">
            <!-- <span class="sale-label">SALE</span> -->
            <!-- / sale-label -->
            <a href="/single/<%= item.id %>" class="product-link"></a>
            <!-- / product-link -->
            <img src="<%= item.image_url %>">
            <!-- / product-image -->

            <!-- product-hover-tools -->
            <div class="product-hover-tools">
                <a href="/single/<%= item.id %>" class="view-btn">
                    <i class="lnr lnr-eye"></i>
                </a>
                <a href="shopping-cart.html" class="add-to-cart">
                    <i class="lnr lnr-cart"></i>
                </a>
            </div><!-- / product-hover-tools -->

            <!-- product-details -->
            <div class="product-details">
                <h3 class="product-title"><%= item.title %></h3>
                <h6 class="product-price"><%= item.price %> â‚¬</h6>
            </div><!-- / product-details -->
        </div>
        <!-- / item --><% end %>

        
    </div> <!-- / products-carousel -->
</section>
<!-- / featured-products -->

<!-- shop 3col -->
<section id="shop">
    <div class="page-header text-center wsub">
        <h2>New Arrivals</h2>
    </div><!--/ page-header -->
    <div class="container">
        <div id="grid" class="row">
            <% @item.last(3).each do |item|  %>
            <!-- product -->
            <div class="col-xs-6 col-md-4 product">
                <a href="/single/<%= item.id %>" class="product-link"></a>
                <!-- / product-link -->
                <img src="<%= item.image_url %>">
                <!-- / product-image -->

                <!-- product-hover-tools -->
                <div class="product-hover-tools">
                    <a href="/single/<%= item.id %>" class="view-btn">
                        <i class="lnr lnr-eye"></i>
                    </a>
                    <a href="shopping-cart.html" class="add-to-cart">
                        <i class="lnr lnr-cart"></i>
                    </a>
                </div><!-- / product-hover-tools -->

                <!-- product-details -->
                <div class="product-details">
                    <h3 class="product-title"><%= item.title %></h3>
                    <h6 class="product-price"><%= item.price %> â‚¬</h6>
                </div><!-- / product-details -->
            </div><!-- / product --><% end  %>

            <!-- grid-resizer -->
            <div class="col-xs-6 col-md-4 shuffle_sizer"></div>
            <!-- / grid-resizer -->

        </div><!-- / row -->
    </div><!-- / container -->
</section>
