<% if @ord_items.any? %>
  <% @ord_items.each do |pro| %>
    <p><%= pro.item.name %> | <%= link_to "Delete", ord_item_path(pro), :data => {:confirm => "You sure?", :method => "delete"} %></p>
    <p> Unit Price: <%= number_to_currency pro.item.price %> | Quantity: <%= pro.quantity %> | Total Price: <%= number_to_currency (pro.item.price * pro.quantity) %></p>
  <% end %>
  <p>Your Total: <%= number_to_currency current_order.total_price %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
