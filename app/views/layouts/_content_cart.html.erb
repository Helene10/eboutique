<!-- content -->

<!-- shopping-cart -->
<div id="shopping-cart">
    <div class="container">
        <!-- shopping cart table -->
        <table class="shopping-cart">
            <thead>
                <tr>
                    <th class="image">&nbsp;</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <%if @content%>
                <% @content.each_with_index do |item, index| %>
                <tr class="cart-item">
                    <td class="image"><a href="/product/<%= item.id %>"><%= image_tag(item.image_url) %></a></td>
                    <td><a href="/product/<%= item.id %>"><%= item.title %></a></td>
                    <td><%= item.price  %> €</td>
                    <td>
                      <div class="d-flex flex-row align-items-center justify-content-center">
                        <%= link_to " - ", cart_path(@cart, :id_modify => item.id, :increase => false), class: "btn btn-sm btn-success-filled btn-rounded", remote: true,  method: :patch%>
                        &nbsp;<%= @cart.quantities[index]%>&nbsp;
                        <%= link_to " + ", cart_path(@cart, :id_modify => item.id, :increase => true), class: "btn btn-sm btn-success-filled btn-rounded", remote: true,  method: :patch%>
                      </div>
                    </td>
                    <td><%= item.price *  @cart.quantities[index].to_i %> €</td>
                    <td class="remove"><%= link_to "x", cart_path(@cart, :id_delete => item.id), class: "btn btn-danger-filled x-remove", remote: true,  method: :delete, data: { confirm: "Are you sure?" } %></td>
                </tr>
                <% end %>
                <% end %>
            </tbody>
        </table>
        <!-- / shopping cart table -->

        <div class="row cart-footer">
           <div class="coupon col-sm-6">
                <!-- <div class="input-group">
                    <input type="text" class="form-control rounded" id="coupon-code" placeholder="Coupon Code">
                    <span class="input-group-btn">
                    <button class="btn btn-primary-filled btn-rounded" type="button"><i class="lnr lnr-tag"></i> <span>Apply Coupon</span></button>
                    </span>
                </div> -->
            </div><!-- / input-group -->
            <div class="update-cart col-sm-6">
                <%= link_to "Vider le panier", "/empty", class: "btn btn-warning btn-rounded" %>
            </div><!-- / update-cart -->
            
            <div class="col-sm-6 cart-total">
                <h4>Cart Total</h4>
                <p>Total: <span><%=@price%> €</span></p>
            </div><!-- / cart-total -->
            
            <div class="col-sm-6 cart-checkout">
              <% if @price !=0 %>
                <a href="/product" class="btn btn-default-filled btn-rounded"><i class="lnr lnr-cart"></i> <span>Continue Shopping</span></a>
                <%= link_to raw("<i class='lnr lnr-exit'></i>"+"<span>  Proceed to Checkout</span>"), "/error", class: "btn btn-primary-filled btn-rounded" %>
                <% end %>
            </div><!-- / cart-checkout -->
            

        </div><!-- / row -->
    </div><!-- / container -->
</div>
<!-- / shopping-cart -->

<!-- / content -->


